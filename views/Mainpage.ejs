<html>
    <head>
        <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="<%= csrfToken %>">
    <script src="https://cdn.tailwindcss.com"></script>
    
    <link href="./css/styles.css" rel="stylesheet"> 
    <title><%= title%></title>
    </head>
    <body>
        <h1>
          
        </h1>
        <%- include('signout.ejs') %>
        <div class="grid grid-cols-4">
            <div class="col-start-2 col-span-2">
                <h1 class="flex justify-center">Main Page</h1>
                <div>
                    <% if(messages && messages.error && messages.error.length > 0)  { %>
                        <% for(var i=0; i<messages.error.length; i++) { %>
                                <p class="rounded-full border-2 p-2 bg-red-400 text-white"> <%= messages.error[i] %></p>
                        <% } %>
                      <% } %>
                </div> 


                <form action="/Add_Election" method="post" class="border-2">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                    <div class="py-3">
                        <label for="ele_Name">Add Election Name:</label>
                        <input type="text" name="ele_Name" 
                        class="border border-yellow-700 text-yellow-900 rounded py-3 w-full">
                    </div>
                   
                    <div class="py-3">
                        <button type="submit" class="text-white bg-blue-700 hover:bg-blue-900 font-medium rounded px-2 py-2">Submit Election Name</button>
                    </div>
                </form>
            </div>
            
        </div>  
        
           
        <%- include('count_elections.ejs') %>
        </div>
    </body>
    
</html>