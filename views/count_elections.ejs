<div class="grid grid-cols-4">
    <div class="col-start-2 col-span-2">
        <% if(elections.length==null) { %>
            <div><span> Massege: For New Election user</span></div>
        
        <%   
        }
        else{
        %>
        <div class="election-list">
            <p>Total number of election: <%=elections.length%></p>
        </div>
        <table class="border-collapse border border-slate-400">
            <tr>
                
               
                <th class="border-2 border-rose-600">S.No.</th>
                <th class="border-2 border-rose-600">Election Name</th>
                <th class="border-2 border-rose-600">Manage Ballot(Question/Voters)</th>
                <th class="border-2 border-rose-600">Edit</th>
                <th class="border-2 border-rose-600">Delete</th>
                <th class="border-2 border-rose-600">Launch Election</th>

            </tr>
        
    
            <% for(let i = 0; i < elections.length; i++) { %>
            <tr>
                <td class="border border-slate-500"><i class="bi bi-pencil-square"></i></td>
                <td class="border border-slate-500"><i class="bi bi-x-octagon-fill"></i></td>
                <td class="border border-slate-500"><%= i+1%> </td>
                <td class="border border-slate-500"><%= elections[i].name %></td>
                <td class="border border-slate-500 content-center">
                    <a href="/elections/<%= elections[i].id %>/ballotForm">
                        <i class="bi bi-kanban"></i>
                    </a> 
                </td>
                <td class="border border-slate-500"><i class="bi bi-rocket-takeoff"></i></td>
                
                
            </tr>
            <% } %>
            
        </table>
        <%
        }
        %>
  </div>
</div>